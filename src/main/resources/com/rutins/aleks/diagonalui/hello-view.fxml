<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rutins.aleks.diagonalui.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox spacing="20.0">
        <padding>
            <Insets right="5.0" />
        </padding>
        <Label alignment="CENTER" contentDisplay="CENTER" text="Tests" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
        <VBox alignment="TOP_CENTER" spacing="5.0">
            <TextField fx:id="adbPath" promptText="ADB Path" />
            <Button fx:id="startLogcatButton" alignment="CENTER" mnemonicParsing="false" onAction="#onLogcatButtonClick" text="Start Logcat" />
        </VBox>
      <ListView fx:id="testList" prefHeight="200.0" prefWidth="100.0" />
    </VBox>
   <TextArea fx:id="outputLines" editable="false" prefHeight="200.0" prefWidth="200.0">
      <font>
         <Font name="Monospaced Regular" size="13.0" />
      </font></TextArea>
</HBox>
